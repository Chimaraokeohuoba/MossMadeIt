<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.codingrespect.mossmadeit.RegisterActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/headings"
        android:text="REGISTRATION"
        android:gravity="center"
        android:paddingBottom="25dp"
        android:textSize="16dp"
        android:id="@+id/register_heading"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/textfield"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="33dp"
            android:src="@drawable/user_icon"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/nearWhite"
            android:text="|"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:gravity="left"
            android:textColorHint="@color/nearWhite"
            android:textStyle="normal"
            android:scrollIndicators="none"
            android:singleLine="true"
            android:textSize="15dp"
            android:padding="5dp"
            android:background="@null"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/textfield"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="33dp"
            android:src="@drawable/user_icon"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/nearWhite"
            android:text="|"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:gravity="left"
            android:textColorHint="@color/nearWhite"
            android:textStyle="normal"
            android:scrollIndicators="none"
            android:singleLine="true"
            android:textSize="15dp"
            android:padding="5dp"
            android:background="@null"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/textfield"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:src="@drawable/email_icon"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:padding="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/nearWhite"
            android:text="|"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:gravity="left"
            android:textColorHint="@color/nearWhite"
            android:textStyle="normal"
            android:scrollIndicators="none"
            android:singleLine="true"
            android:textSize="15dp"
            android:padding="5dp"
            android:background="@null"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/textfield"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/phone_icon"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:padding="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/nearWhite"
            android:text="|"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:gravity="left"
            android:textColorHint="@color/nearWhite"
            android:textStyle="normal"
            android:scrollIndicators="none"
            android:singleLine="true"
            android:textSize="15dp"
            android:padding="5dp"
            android:background="@null"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/textfield"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="33dp"
            android:src="@drawable/password_icon"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/nearWhite"
            android:text="|"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:gravity="left"
            android:inputType="textPassword"
            android:textColorHint="@color/nearWhite"
            android:textStyle="normal"
            android:scrollIndicators="none"
            android:singleLine="true"
            android:textSize="15dp"
            android:padding="5dp"
            android:background="@null"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/textfield"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="33dp"
            android:src="@drawable/confirm_password_icon"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/nearWhite"
            android:text="|"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:gravity="left"
            android:textColorHint="@color/nearWhite"
            android:textStyle="normal"
            android:scrollIndicators="none"
            android:singleLine="true"
            android:textSize="14dp"
            android:padding="5dp"
            android:background="@null"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/buttons"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/fblogin">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/register_icon"
            android:layout_marginRight="12dp"
            android:padding="3dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:id="@+id/regButton"
            android:gravity="center"
            android:textSize="15dp"/>



    </LinearLayout>
       

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"></FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/doing_it_from_ng"/>


</LinearLayout>
